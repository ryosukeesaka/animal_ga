<div class="profbox">
  <h5 style="margin: 30px;  padding-top: 30px">会員</h5>
  <%= form_for(@user, url: admins_user_path(@user.id)) do |f| %>
    <table style="width:50%; margin-left:10px;" class="table table-condensed" cellspacing="0" cellpadding="5" >
      <tr>
        <td style="background: rgba(0,0,0,0.1);" style="border-style: none;">prof img</td>
        <td  valign="top"  style="border-style: none; width:300px;">
          <%= f.attachment_field :Image %>
        </td>
      </tr>
      <tr>
        <td style="background: rgba(0,0,0,0.1);" style="border-style: none;">introducrion</td>
        <td  valign="top"  style="border-style: none; width:300px;">
          <%= f.text_area :introduction %>
        </td>
      </tr>
      <tr>
        <td style="background: rgba(0,0,0,0.1);" style="border-style: none;">phone number</td>
        <td valign="top"  style="border-style: none; width:150px;">
          <% if @user.deleted_at.blank? %>
            <%= radio_button_tag :user_status, "1", {:checked => true} %>有効
            <%= radio_button_tag :user_status, "2" %>退会済み
          <% else %>
            <%= radio_button_tag :user_status, "1" %>有効
            <%= radio_button_tag :user_status, "2", {:checked => true} %>退会済み
          <% end %>
        </td>
      </tr>
    </table>
    <div class="submit-botton" style="padding:30px;">
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
</div>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> errors.messages.not_saved</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


