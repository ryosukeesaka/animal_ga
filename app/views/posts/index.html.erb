<!----------------main-------------------->

<main class="clearfix">
    <!-----------------投稿一覧--------------->
    <section class="post" style="float:left;">
         <h2 class="post-headline" style="border-bottom: 8px solid #e6e6fa; color:#808080; font-family: Chalkduster; ">Post index</h2>
        <div class="post-box" style="padding-top:30px;">
            <div class="post-item clearfix">
                <% @posts.each do |post| %>
                    <div class="post-box">
                        <div class="pict"><%= attachment_image_tag post, :image %></div>
                        <span class="pictname">step1</span>
                        <div class="title" style="margin-top: 30px;">
                           <!-------------いいね機能-------------->
                            <div id="post_<%= post.id %>">
                                <%= render 'posts/favorite', post: post %>
                            </div>
                                <span class="category"><%= post.pet_genre %>/<%= post.pet_name %>/<%= post.pet_age %>/<%= post.created_at.strftime('%Y.%m.%d') %></span>
                                <div class="post-user-name">by..<%=link_to "#{post.user.last_name}" + "#{post.user.first_name}", user_path(post.user_id) %></div>
                        </div>
                        <p class="post-text"><%= post.body %></p>
                    </div>
            </div>
        </div>
　　　　　<!----------------コメント機能----------------->
        <div id="post_comments_<%= post.id %>">
        <%= render 'posts/post_comment', post: post, post_comment: @post_comment %>
        </div>


        <% end %>
    </section>
    <!-------------投稿------------->
     <div class="sidebar" style="float:left;">
        <div class="sidebar-contents" >
            <%= form_for(@post) do |f| %>
                <table style="width:100px; margin-left:10px;" class="table table-condensed" cellspacing="0" cellpadding="5" >
                    <tr>
                        <td><%= f.label :pet_name %></td>
                　　     <td><%= f.text_field :pet_name, {size:"10"} %></td>
            　　     </tr>
                    <tr>
                        <td><%= f.label :age %></td>
                        <td><%= f.select :pet_age, Post.pet_ages.keys, {prompt: '選択してください'}, class: 'form-control  btn-default' ,style:"width:150px" %></td>
            　　     </tr>
            　　     <tr>
                　　     <td><%= f.label :genre %></td>
                　　     <td><%= f.select :pet_genre, Post.pet_genres.keys, {prompt: '選択してください'}, class: 'form-control  btn-default' ,style:"        width:150px" %></td>
            　　     </tr>
            　　     <tr>
                　　     <td><%= f.label :image %></td>
                　　     <td><%= f.attachment_field :image %></td>
            　　     </tr>
            　　     <tr>
                　　    <td><%= f.label :body %></td>
                　　    <td><%= f.text_area  :body %></td>
            　　    </tr>
            　　    <tr>
                　　  <td></td>
                　　  <td><%= f.submit '投稿' %></td>
            　　    </tr>
        　　　　  </table>
    　　     <% end %>
　　　　  </div>
    </div>
</main>