<!----------------main-------------------->

<main class="clearfix">
    <!-----------------投稿一覧--------------->
    <section class="post" style="float:left;">
         <h2 class="post-headline" style="border-bottom: 8px solid #e6e6fa; color:#808080; font-family: Chalkduster; ">Post index</h2>
        <div class="post-box" style="padding-top:30px;">
            <div class="post-item clearfix">
                <% @posts.each do |post| %>
                    <div class="post-box">
                        <div class="pict"><%= attachment_image_tag post, :image %></div>
                        <span class="pictname">step1</span>
                        <div class="title" style="margin-top: 30px;">
                           <!-------------いいね機能-------------->
                            <div id="post_<%= post.id %>">
                                <%= render 'posts/favorite', post: post %>
                            </div>
                                <span class="category"><%= post.pet_genre %>/<%= post.pet_name %>/<%= post.pet_age %>/<%= post.created_at.strftime('%Y.%m.%d') %></span>
                                <div class="post-user-name">by..<%=link_to "#{post.user.last_name}" + "#{post.user.first_name}", user_path(post.user_id) %></div>
                        </div>
                        <p class="post-text"><%= post.body %></p>
                    </div>
            </div>
        </div>



     <!----------------コメント機能----------------->
    <div class= "post-comment">
        <%= form_for [post, @post_comment] do |f| %>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに",style:"width:400px" %>
            <%= f.submit "送信する", class: "btn btn-default  pull-right",style:"font-size: 5px; margin-top: 5px;" %>
        <% end %>
    </div>
    <h2 class="comment-count" style="font-size: 10px;"><%= post.post_comments.count %>件のコメント</h2>
        <ul style="list-style: none; margin-bottom: 10px;">
            <!-----postモデルに紐づいたpost_commentsモデル------>
            <% post.post_comments.each do |post_comment| %>
                <li class="comment" style="list-style: none;">
                    <div class="comment-text" style="margin-bottom: 10px;">
                        <div class="comment-author">
                            <div class="comment-user-img">
                            <%= attachment_image_tag post_comment.user, :Image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg", class: "img-circle pull-left profile-img" %></div>
                            <div class="link-author"><%= link_to "#{post_comment.user.last_name}" + "#{post_comment.user.first_name}", user_path(post_comment.user.id) %></div>
                            <span class="comment-body"><%= post_comment.comment %></span>
                            <div class="comment-entry" style="margin-bottom: 10px; font-size:13px;" ><%= post_comment.created_at.strftime('%Y/%m/%d') %></div>
                                <% if post_comment.user_id == current_user.id %>
                                    <div class="destroy-link">
                                        <%= link_to "削除", post_post_comments_path(post, post_comment), method: :delete %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>

        <% end %>
    </section>
    <!-------------投稿------------->
     <div class="sidebar" style="float:left;">
        <div class="sidebar-contents" >
            <%= form_for(@post) do |f| %>
                <table style="width:100px; margin-left:10px;" class="table table-condensed" cellspacing="0" cellpadding="5" >
                    <tr>
                        <td><%= f.label :pet_name %></td>
                　　     <td><%= f.text_field :pet_name, {size:"10"} %></td>
            　　     </tr>
                    <tr>
                        <td><%= f.label :age %></td>
                        <td><%= f.select :pet_age, Post.pet_ages.keys, {prompt: '選択してください'}, class: 'form-control  btn-default' ,style:"width:150px" %></td>
            　　     </tr>
            　　     <tr>
                　　     <td><%= f.label :genre %></td>
                　　     <td><%= f.select :pet_genre, Post.pet_genres.keys, {prompt: '選択してください'}, class: 'form-control  btn-default' ,style:"        width:150px" %></td>
            　　     </tr>
            　　     <tr>
                　　     <td><%= f.label :image %></td>
                　　     <td><%= f.attachment_field :image %></td>
            　　     </tr>
            　　     <tr>
                　　    <td><%= f.label :body %></td>
                　　    <td><%= f.text_area  :body %></td>
            　　    </tr>
            　　    <tr>
                　　  <td></td>
                　　  <td><%= f.submit '投稿' %></td>
            　　    </tr>
        　　　　  </table>
    　　     <% end %>
　　　　  </div>
    </div>
</main>