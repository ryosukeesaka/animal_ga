<div class="message_container" data-id="<%= message.id %>">
	<div id="message_user">
		<%= attachment_image_tag message.user, :Image, :fill, 30, 30, format: 'jpeg',fallback: "no_image.jpg", class: "img-circle pull-left profile-img" %>by..<%= link_to "#{message.user.last_name}" + "#{message.user.first_name}", user_path(message.user_id) %>
	</div>
	<div id="content">
		<span class="content">
			<%= message.content %>
		</span>
	</div>
	<div id="message_date">
		<%= message.created_at.strftime('%Y.%m.%d') %>
	</div>
	<% if message.user_id == current_user.id %>
		<div id="message_delete">
